{
  "routes": [
    {
      "route": "/api/healthcheck",
      "methods": [ "GET" ],
      "allowedRoles": [ "anonymous" ]
    },
    {
      "route": "/_next/static/*",
      "allowedRoles": [ "anonymous" ]
    },
    {
      "route": "/.auth/*",
      "allowedRoles": [ "anonymous" ]
    },
    {
      "route": "/*",
      "allowedRoles": [ "authenticated" ]
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/api/*",
      "/_next/static/*", 
      "/.auth/*" 
    ]
  },
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/aad",
      "statusCode": 302
    }
  },
  "globalHeaders": {
    "Content-Security-Policy": "default-src 'self' 'unsafe-inline' 'unsafe-eval' *.azurewebsites.net *.azurestaticapps.net; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval' 'unsafe-inline' *.azurewebsites.net *.azurestaticapps.net;"
  },
  "mimeTypes": {
    ".json": "application/json"
  }
}